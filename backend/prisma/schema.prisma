generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model HomeBanner {
  id                 String   @id @default(uuid())
  title              String
  subtitle           String
  imageURL           String
  cloudinaryPublicId String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("home-banner")
}
